<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F08C35" />
            <gradient android:angle="-90" android:startColor="#F08C35" android:endColor="#F08C35"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F08C35" />
            <solid android:color="#F08C35"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F08C35" />
            <gradient android:angle="-90" android:startColor="#F08C35" android:endColor="#FFCC80" />
        </shape>
    </item>
</selector>